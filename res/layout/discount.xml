<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@drawable/bg_with_stripes" android:baselineAligned="false">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="12dp" android:background="#00a1d7">
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="6dp" android:background="#000000">
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ddPlace" android:text="Place"
                android:gravity="center_horizontal" android:textColor="#fffffd" android:textSize="20dp"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:textStyle="bold" android:paddingLeft="25dp" android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:id="@+id/discountContent"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_marginRight="6dp" android:layout_marginBottom="6dp"
                >
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff"

                    android:layout_marginBottom="8dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="150dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="12dp"
                            android:layout_height="fill_parent" android:background="#181818">
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="25dp"
                            android:layout_height="fill_parent" android:background="#252525">
                    </LinearLayout>
                    <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:id="@+id/ddCampaignImage" android:focusableInTouchMode="true"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:background="#dcdcdc"
                        android:paddingTop="5dp" android:paddingBottom="5dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ddDiscount" android:text="Discount"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:textColor="#000000" android:layout_marginLeft="75dp"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_marginLeft="23dp"
                        android:layout_marginTop="10dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/priceLabel"
                            android:id="@+id/textView1" android:textColor="#989898" android:textSize="12dp"/>
                    <View
                            android:layout_width="253dp"
                            android:layout_height="3dip"
                            android:background="#dcdcdc"
                            android:layout_marginBottom="15dp"/>
                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="50dp" android:orientation="horizontal">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="6dp"
                                android:layout_height="45dp" android:background="#00a1d7"
                                android:layout_gravity="top">
                        </LinearLayout>
                        <EditText
                                android:layout_width="172dp"
                                android:layout_height="45dp"
                                android:id="@+id/priceInput"
                                android:textSize="22dp"
                                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                                android:numeric="integer" android:inputType="number" android:background="#dcdcdc"
                                android:paddingLeft="10dp" android:layout_gravity="top"/>
                        <Button
                                android:layout_width="70dp"
                                android:layout_height="45dp"
                                android:text="@string/confirmButton"
                                android:id="@+id/ddConfirmBtn" android:background="#00a1d7"
                                android:textColor="#ffffff" android:textSize="24dp" android:textStyle="bold"
                                android:layout_gravity="top"/>
                        <ImageView
                                android:layout_width="15dp"
                                android:layout_height="45dp"
                                android:id="@+id/btnTriang" android:layout_gravity="top"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/ddDiscRateIcon" android:layout_gravity="left|center_vertical"
                android:layout_marginTop="130dp" android:layout_marginLeft="4dp"/>
        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/edgeImg2"
                android:layout_toRightOf="@id/discountContent"
                android:layout_marginLeft="-30dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="14dp"/>
    </RelativeLayout>




</LinearLayout>